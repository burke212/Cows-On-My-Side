<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_menu_tv"
        android:text="Main Menu"
        android:textSize="52sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<!--    <Button
        android:id="@+id/new_game_btn"
        android:text="New Game"
        android:layout_below="@+id/main_menu_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/num_of_players_tv"
        android:text="Number of Players:"
        android:textSize="30sp"
        android:layout_below="@+id/main_menu_tv"
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/player_num_seekbar"
        android:textAlignment="center"
        android:layout_below="@+id/num_of_players_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:max="4"
        android:min="2"
        android:progress="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/num_of_players_from_seekbar_tv"
        android:text="2"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/player_num_seekbar"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/next_btn_mainmenu"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/player_num_seekbar"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>