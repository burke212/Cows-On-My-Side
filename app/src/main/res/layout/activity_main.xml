<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/RL_1"
        android:background="@drawable/custom_border"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LL_1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player1_tv"
                android:layout_weight="1"
                android:text="@string/player_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/player2_tv"
                android:layout_weight="1"
                android:text="@string/player_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_1.2"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/player1_counter_btn"
                android:text="@string/default_counter_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/player2_counter_btn"
                android:layout_weight="1"
                android:text="@string/default_counter_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/RL_2"
        android:background="@drawable/custom_border"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LL_2.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player3_tv"
                android:text="@string/player_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/player4_tv"
                android:text="@string/player_4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_2.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/player3_counter_btn"
                android:text="@string/default_counter_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/player4_counter_btn"
                android:text="@string/default_counter_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/RL_3"
        android:background="@drawable/custom_border"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/player5_tv"
            android:text="@string/player_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/player5_counter_btn"
            android:layout_below="@+id/player5_tv"
            android:text="@string/default_counter_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/final_score_btn"
        android:text="@string/score"
        android:paddingTop="10dp"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
